<!-- Specify the properties file by setting the "log4j.configuration" property at runtime.
  e.g. java -jar -Xmx2g -Dlog4j.configurationFile=log4j_debug.xml igv.jar -->
<Configuration>
  <Appenders>
    <Console name="stdout" target="SYSTEM_OUT">
      <PatternLayout pattern="%p [%d{ISO8601}]  [%F:%L] [%t]  %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="org.broad.igv" level="info"/>
    <Root level="info">
      <AppenderRef ref="stdout"/>
    </Root>
  </Loggers>
</Configuration>